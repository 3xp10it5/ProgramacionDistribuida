@page
@model WebApplication1.Pages.ContactoModel
@{
    ViewData["Title"] = "Contacto";
}

<div class="container-fluid">
    <div class="img-contactanos">
        <img src="/img/contactanos-img.png" alt="" />
    </div>
</div>
<div class="container-fluid">
    <div class="row featurette contacto-seccion">
        <div class="containerForm mt-5">
            <div class="form-container">
                <h3 class="mb-4 texto-contacto titulo-form">FORMULARIO DE CONTACTO</h3>
                <form asp-action="YourActionMethod" method="post" novalidate class="needs-validation" id="contactForm">
                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label text-white">Nombre o empresa</label>
                        <input asp-for="Nombre" class="form-control" required />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Telefono" class="form-label text-white">Teléfono</label>
                        <input asp-for="Telefono" class="form-control" type="tel" required />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CorreoElectronico" class="form-label text-white">Correo Electrónico</label>
                        <input asp-for="CorreoElectronico" class="form-control" type="email" required />
                        <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Asunto" class="form-label text-white">Seleccione un asunto</label>
                        <select asp-for="Asunto" class="form-control">
                            <option value="">Seleccione una opción...</option>
                            <option value="Componentes">Componentes</option>
                            <option value="Solicitud-de-servicio">Solicitud de servicio</option>
                            <option value="Soporte-tecnico">Soporte tecnico</option>
                            <option value="Contacto">Contacto</option>
                        </select>
                        <span asp-validation-for="Asunto" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Mensaje" class="form-label text-white">Mensaje</label>
                        <textarea asp-for="Mensaje" class="form-control" rows="4" required></textarea>
                        <span asp-validation-for="Mensaje" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary" style="background-color: #0c0; margin-bottom: 1rem;">Enviar</button>
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                </form>
            </div>
        </div>


        <div class="col-md-5">
            <div class="container mt-5">
                <h3 class="mb-4 texto-contacto titulo-contacto">INFORMACIÓN ADICIONAL</h3>
                <div class="row">
                    <!-- Horarios de Atención -->
                    <div class="col-12 mb-4">
                        <div class="align-items-start texto-contacto">
                            <img src="/img/horarios.png" alt="Icono Horarios" class="img-contacto">
                            <div>
                                <h5>Horarios de Atención</h5>
                                <p>Lunes a Viernes: 9:00 AM - 6:00 PM</p>
                                <p>Sábado: 10:00 AM - 2:00 PM</p>
                            </div>
                        </div>
                    </div>
                    <!-- Información de Contacto Adicional -->
                    <div class="col-12 mb-4">
                        <div class="align-items-start texto-contacto">
                            <img src="/img/contacto.png" alt="Icono Contacto" class="img-contacto">
                            <div>
                                <h5>Información de Contacto</h5>
                                <p>Teléfono: +52 555 123 4567</p>
                                <p>Email: contacto@empresa.com</p>
                            </div>
                        </div>
                    </div>
                    <!-- Dirección de la Empresa -->
                    <div class="col-12 mb-4">
                        <div class="align-items-start texto-contacto">
                            <img src="/img/ubicacion.png" alt="Icono Dirección" class="img-contacto">
                            <div>
                                <h5>Dirección</h5>
                                <p>Calle Ejemplo 123, Colonia Centro</p>
                                <p>Ciudad, Estado, CP 12345</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>



