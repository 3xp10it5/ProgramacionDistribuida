@page
@model WebApplication1.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container login-seccion">
    <div class="login-container">
        <!-- Foto de usuario en círculo -->
        <div class="user-avatar">
            <img src="~/favicon.png" alt="User Avatar">
        </div>

        <!-- Formulario de inicio de sesión -->
        <form action="/login" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label asp-for="Usuario" class="form-label">Usuario</label>
                <input asp-for="Usuario" class="form-control" required>
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Contraseña" class="form-label">Usuario</label>
                <input asp-for="Contraseña" class="form-control" required>
                <span asp-validation-for="Contraseña" class="text-danger"></span>
            </div>

            <!-- Enlace para "Forgot password" -->
            <div class="forgot-password">
                <a href="#" class="text-primary">¿Olvidaste tu contraseña?</a>
            </div>

            <!-- Botón de enviar -->
            <button type="submit" class="btn btn-primary w-100 mt-3">Iniciar Sesión</button>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}